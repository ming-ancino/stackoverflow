-if flash[:notice]
  %p.notice
    = flash[:notice]
-if flash[:alert]
  %p.notice
    =flash[:alert]
%h1
  Login

= link_to "Sign up", new_users_path
= form_tag(sessions_path)  do
  .field
    = label_tag :username
    = text_field_tag :username, params[:username]

  .field
    = label_tag :password
    = password_field_tag :password 
  .actions
    = submit_tag "Log in"
