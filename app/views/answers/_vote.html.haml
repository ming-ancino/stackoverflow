-vote = Vote.get_vote(@answer,session[:current_user])
%div
  -if nil == vote 
    =link_to 'Upvote', question_answer_votes_path(@answer.container,@answer,:vote_value => 1 ), :class =>'btn btn-success', :remote => true, method: :post
  -elsif 1 <= @answer.user_vote(session[:current_user])
    =link_to 'Upvote', question_answer_votes_path(@answer.container,@answer), :class =>'btn btn-success', :remote => true,:disabled => 'disabled'
  -else
    =link_to 'Upvote', question_answer_vote_path(@answer.container,@answer,vote), method: :delete, :class => 'btn btn-danger ', :remote => true, :class =>'btn btn-success'
