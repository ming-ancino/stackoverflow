$('#div_comments_for_answer_' + <%= @id %>).append("<%=j render :partial => '/answers/comment', :locals => {:answer => @answer}%>");
$('comment_for_'+ <%= @id %>).val("");
var count =  parseInt($('span#comment_count_'+ <%= @id %>).text());
count ++;
$('span#comment_count_'+ <%= @id %>).text(count)
if(count > 1)
  $('span#comment_string_'+<%= @id %>).text("Comments")
else
  $('span#comment_string_'+ <%= @id %>).text("Comment")
$('#collapse'+ <%= @id %>).collapse('show');
